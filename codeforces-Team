#include <iostream>
#include <cstring>
 
using namespace std;
 
int main(){
   int n;
   int x,y,z;
   int f=0;
   cin>>n;
   for(int i=0;i<n;i++){
        int c=0;
        cin>>x;
    cin>>y;
    cin>>z;
 
   if(x==1)
    c++;
   if(y==1)
    c++;
   if(z==1)
    c++;
   if(c>=2)
    f++;
 
   }
   cout<<f<<endl;
}
