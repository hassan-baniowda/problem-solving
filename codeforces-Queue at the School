#include <iostream>
#include <cstring>
 
using namespace std;
 
int main(){
int n,x;
cin>>n>>x;
char a[n];
for(int i=0;i<n;i++)
    cin>>a[i];
    while (x!=0){
        for(int i=0;i<n-1;i++){
            if(a[i]=='B'&&a[i+1]=='G')
            {
                char x=a[i];
                a[i]=a[i+1];
                a[i+1]=x;
                i++;
 
 
 
            }
            else continue;
        }
        x--;
    }
    for(int i=0;i<n;i++)
        cout<<a[i];
 
}
