#include <iostream>
#include <cstring>
 
using namespace std;
 
int main(){
   string s;
   cin>>s;
   for(int i=0;i<s.length();i++){
 
    if(s[i]=='a'||s[i]=='A'||s[i]=='o'||s[i]=='O'||s[i]=='y'||s[i]=='Y'||s[i]=='u'||s[i]=='U'||s[i]=='e'||s[i]=='E'||s[i]=='i'||s[i]=='I')
        continue;
        else { cout<<".";
        if(s[i]>=65&&s[i]<97)
            s[i]+=32;
        cout<<s[i];}
 
   }
 
}
